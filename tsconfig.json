{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "ESNext",
      "noImplicitAny": false,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "typeRoots": [
        "@types",
        "./node_modules/@types"
      ],
      "paths": {
        "@api/*": [
          "src/api/*"
        ],
        "@config/*": [
          "src/config/*"
        ],
        "@common/*": [
          "src/common/*"
        ],
        "*": [
          "node_modules/*"
        ]
      }
    },
    "include": [
      "src/**/*"
    ]
  }